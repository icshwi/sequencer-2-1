@import url("nature.css");
 
/* -- page layout ----------------------------------------------------------- */

div.related {
    position: fixed;
    height: 30px;
    top: 0;
    left: 0;
    right: 0;
    bottom: div.footer.top;
    width: 100%;
}

div.document {
    position: fixed;
    top: 30px;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: auto;
}

div.footer {
    position: fixed;
    left: 0;
    right: 0;
    width: auto;
    bottom: 0;
    height: auto;
    padding: 2px;
    color: #666;
    background-color: #000;
}

div.sphinxsidebar {
    position: fixed;
    top: inherit;
    bottom: inherit;
    height: auto;
    left: 0;
    right: auto;
    width: 25%;
    overflow: auto;
    margin: 0;
    background-color: #eee;
}

div.documentwrapper {
    position: fixed;
    top: inherit;
    bottom: inherit;
    height: auto;
    left: 25%;
    right: 0;
    width: 75%;
    overflow: auto;
    margin: 0;
    background-color: #fff;
}

div.bodywrapper {
    margin: 0 0 0 0;
}
